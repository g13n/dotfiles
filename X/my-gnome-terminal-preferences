# disable cursor blinking
gconftool-2 --set /apps/gnome-terminal/profiles/Default/cursor_blink_mode --type string off

# use login shell
gconftool-2 --set /apps/gnome-terminal/profiles/Default/login_shell true

gconftool-2 --set /apps/gnome-terminal/profiles/Default/scrollback_lines 10000

gconftool-2 --set /apps/gnome-terminal/profiles/Default/font --type string "Source Code Pro 13"
gconftool-2 --set /apps/gnome-terminal/profiles/Default/cursor_shape --type string block

gconftool-2 --set /apps/gnome-terminal/keybindings/copy "<Alt>w"
gconftool-2 --set /apps/gnome-terminal/keybindings/paste "<Primary>y"

sh ./set-gnome-terminal-theme white
